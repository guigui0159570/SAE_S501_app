<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17282D"
    tools:context=".Inscription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="650sp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/inspire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/inspire" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_titre_connecter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150sp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titreMDP"
            android:layout_width="213dp"
            android:layout_height="110dp"
            android:layout_margin="1sp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10sp"
            android:text="Mot de passe oubliée"
            android:textAppearance="@style/se_connecte" />

        <View
            android:id="@+id/ligneHaut"
            android:layout_width="310dp"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="4dp"
            android:background="#D9D9D9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Inscription" />

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="525dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adresse_mai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="9sp"
                android:layout_gravity="center"
                android:text="Adresse email"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/adresse_mai"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rectangle_3" />

            <EditText
                android:id="@+id/editTextEmail"
                style="@style/CustomEditTextStyle"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:hint="Adresse e-mail"
                android:inputType="textEmailAddress"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:paddingLeft="10dp"
                android:textColor="#00BA8D"
                app:layout_constraintBaseline_toBaselineOf="@+id/adresse_mai"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/adresse_mai2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:text="Confirmer addresse mail"
                android:textAppearance="@style/adresse_mai"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

            <EditText
                android:id="@+id/editTextEmail2"
                style="@style/CustomEditTextStyle"
                android:layout_width="300dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:hint="Adresse e-mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="#00BA8D"
                app:layout_constraintBaseline_toBaselineOf="@+id/adresse_mai2"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/sendEmail"
                style="@style/CustomButtonStyle"
                android:layout_width="153sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:layout_margin="40sp"
                android:background="@drawable/custom_button_background"
                android:text="@string/btn_valider"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:id="@+id/ligneBas"
                android:layout_width="310dp"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:background="#D9D9D9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.475"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Inscription"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/retour"
                android:layout_width="389dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:textSize="17sp"
                android:text="Vous avez déjà un compte ? : Se connecter"
                android:textAppearance="@style/nouveau"
                android:translationY="-1.74sp"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.903"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>


    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>

